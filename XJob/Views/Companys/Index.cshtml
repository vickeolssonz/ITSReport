@model  IEnumerable<XJob.Models.Report> 
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-hover">
	<thead>
		<tr>
		
			<th>Reports</th> 
		</tr>
	</thead>
	<tbody>
		@foreach (var rep in Model)
		{
			<tr>
				<td>
					@if (rep.IsDone == true)
					{
						@Html.ActionLink(rep.Title, "Details", "Companys", new { id = rep.Id}, null)
					}
					else
					{
						@Html.ActionLink(rep.Title, "Details", "Companys", new { id = rep.Id }, null)
					}
				</td>
			</tr>
		}
	</tbody>
	</table>